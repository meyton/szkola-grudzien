<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Szkola.View.DuckiesPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" FontSize="Large" Text="{Binding Score}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            <AbsoluteLayout x:Name="playground" Grid.Row="1" />
        </Grid>
    </ContentPage.Content>
</ContentPage>