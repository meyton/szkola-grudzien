<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Szkola.View.DuckiesPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="{Binding Score}" AbsoluteLayout.LayoutBounds="0.5, 0.0, 1.0, 0.1" AbsoluteLayout.LayoutFlags="All" />
            <Button x:Name="btnKaczka" Text="Kaczka 1" TextColor="Black" BackgroundColor="LightYellow" 
                    Clicked="Button_Clicked" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.2, 100, 50" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>