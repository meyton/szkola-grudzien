<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Szkola.View.TestPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Message}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Krzesło" Command="{Binding CloseCommand}" CommandParameter="krzesło" />
            <Button Text="Stół" Command="{Binding CloseCommand}" CommandParameter="stół" />
            <Button Text="Kanapa" Command="{Binding CloseCommand}" CommandParameter="kanapa" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>